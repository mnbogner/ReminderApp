<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="TITLE"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/text_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="TEXT"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2"
        />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="DATE"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/text_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2"
        />

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_marginVertical="1dp"
        android:paddingHorizontal="5dp"
        android:background="@drawable/edit_border"
        app:layout_constraintTop_toTopOf="@id/title_text"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        app:layout_constraintStart_toEndOf="@id/title_text"
        app:layout_constraintWidth_percent="0.6"
        />

    <EditText
        android:id="@+id/text_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:layout_marginVertical="1dp"
        android:paddingHorizontal="5dp"
        android:background="@drawable/edit_border"
        app:layout_constraintTop_toTopOf="@id/text_text"
        app:layout_constraintBottom_toBottomOf="@id/text_text"
        app:layout_constraintStart_toEndOf="@id/text_text"
        app:layout_constraintWidth_percent="0.6"
        />

    <EditText
        android:id="@+id/date_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="none"
        android:focusableInTouchMode="false"
        android:layout_marginVertical="1dp"
        android:paddingHorizontal="5dp"
        android:background="@drawable/edit_border"
        app:layout_constraintTop_toTopOf="@id/date_text"
        app:layout_constraintBottom_toBottomOf="@id/date_text"
        app:layout_constraintStart_toEndOf="@id/date_text"
        app:layout_constraintWidth_percent="0.6"
        />

    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ADD"
        android:textSize="20dp"
        android:backgroundTint="@color/colorTanDark"
        app:layout_constraintTop_toTopOf="@id/title_text"
        app:layout_constraintBottom_toBottomOf="@id/date_text"
        app:layout_constraintStart_toEndOf="@+id/title_edit"
        app:layout_constraintWidth_percent="0.2"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reminder_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        app:layout_constraintTop_toBottomOf="@id/date_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/toggle_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="SWAP"
        android:textSize="20dp"
        android:backgroundTint="@color/colorTanDark"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="0pts"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:gravity="center_vertical|right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>